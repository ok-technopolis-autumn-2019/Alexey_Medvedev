@require 'colors.styl'

.task-filter
  height: inherit
  display: flex
  align-items: center

  &__item
    padding: 20px 2px 20px 2px

  &__input
    position: absolute
    left: -9999px

    &:checked ~ .task-filter__text
      border: 1px solid
      border-radius: 3px

  &__text
    border: 1px transparent solid
    border-radius: 3px
    padding: 2px 8px 2px 8px


.task-clear-completed
  border: none
  background-color: $white
  color: $dark-gray
  font-size: 14px
  font-family: 'Roboto', 'Arial', sans-serif