@require 'colors.styl'

.main-controls
  &__select-all-button
    background: url(../images/all-check-mark.svg) no-repeat center center
    height: 65px
    width: 60px
    border: none
    text-indent: -9999px
    white-space: nowrap

  &__create-new
    flex-grow: 1

  &__create-new-input
    border: 0 none
    font-family: Roboto, sans-serif
    color: $light-gray
    width: 100%
    height: 65px
    box-sizing: border-box